			[System.String]
			$NSP,
			
			[Parameter()]
			[_SANConnection]
			$SANConnection = $global:SANConnection,
			
			[Parameter(Position=2)]
			[switch]$Demo

		)

Write-DebugLog "Start: In Set-3PARHostPorts- validating input values" $Debug 
