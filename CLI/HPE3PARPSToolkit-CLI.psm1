	{
		write-debuglog "$plinkresult" "ERR:" 
		return $plinkresult
	}
	if(!($Name))
	{
		Get-help Set-3parVV
		return
	}
			
	if($Name)
	{			
		$updatevvcmd="updatevv -f "
		
		if($RO)
		{
			$updatevvcmd += " -ro "
		}
		if($RemoveAndRecreate)
		{
			$updatevvcmd += " -removeandrecreate  "
		}
		
		$vvtempnames = $Name.split(",")
		$limit = $vvtempnames.Length - 1
		foreach ($i in 0..$limit)
		{				
			if ( $vvtempnames[$i] -match "^set:")	
