		}
		
		foreach ($s in $Result[2..$Result.count])
		{
			$s= [regex]::Replace($s,"^ +","")
			$s= [regex]::Replace($s," +",",")
			$s = $s.split(",")
			$sysinfo.add("RawFree(MB)",$s[0])
			$sysinfo.add("UsableFree(MB)",$s[1])
