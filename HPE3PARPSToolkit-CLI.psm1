		}
		$sysspacecmd += "-p -dk $Disk"
		write-debuglog "Get 3par system space cmd -> $sysspacecmd " "INFO:"
		$Result = Invoke-3parCLICmd -Connection $SANConnection -cmds  $sysspacecmd
