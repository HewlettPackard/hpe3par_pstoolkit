			{
				$s= [regex]::Replace($s,"^ ","")			
				$s= [regex]::Replace($s," +",",")	
				$s= [regex]::Replace($s,"-","")
				$s= $s.Trim() -replace 'Pkts/s,KBytes/s,Pkts/s,KBytes/s,Pkts/s,KBytes/s','Pkts/s(Receive),KBytes/s(Receive),Pkts/s(Transmit),KBytes/s(Transmit),Pkts/s(Total),KBytes/s(Total)' 	
				if($s.length -ne 0)
				{					
					if(-not $Fullcounts)
					{
						$s=$s.Substring(1)	
					}					
				}				
				Add-Content -Path $tempFile -Value $s	
			}
			$Flag = "true"			
		}
		Import-Csv $tempFile 
		del $tempFile
	}
	else
	{
		return  $Result
	}
