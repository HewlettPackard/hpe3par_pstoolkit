		$Cmds= "controlport config host -ct $PortConfig -f $p"
		Invoke-3parCLICmd -Connection $SANConnection  -cmds $Cmds

		Write-DebugLog "Resetting port $p " $Info
		$Cmds="controlport rst -f $p"
		Invoke-3parCLICmd -Connection $SANConnection  -cmds $Cmds	
		
