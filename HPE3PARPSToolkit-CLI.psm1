			}
		}
	}
	$plinkresult = Test-PARCli
	if($plinkresult -match "FAILURE :")
	{
		write-debuglog "$plinkresult" "ERR:" 
		return $plinkresult
	}		
	$cmd= "growvv -f "
	
	if ($VVname)
	{		
		$cmd+=" $VVname "
	}
	else
	{
		Write-DebugLog "Stop: VVname  is Mandate" $Debug
		return "Error :  -VVname  is Mandate. "		
	}
	if ($Size)
	{
		$demo=$Size[-1]
		$de=" g | G | t | T "
